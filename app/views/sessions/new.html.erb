<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text">Log in</h1>
        <%= form_for(:session, url: login_path) do |f| %>

            <div class="form-group">
              <%= f.label :email, class: "text" %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password, class: "text" %>
              <%= f.text_field :password, class: "form-control" %>
            </div>

            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span>Remember me on this computer</span>
            <% end %>

            <%= f.submit "Log in", class: "btn-block btn" %>
        <% end %>
        <p>New user? <%= link_to "Sign up now!", signup_path %></p>
      </div>
    </div>
  </div>
</div>
