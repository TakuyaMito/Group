<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text">Sign in</h1>
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :name, class: 'text' %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :email, class: "text" %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>

          <%= f.submit "登録", class: "btn-block btn" %>
        <% end %>
        <%= link_to "ログインはこちらから", "#", class: "text" %>
      </div>
    </div>
  </div>
</div>
