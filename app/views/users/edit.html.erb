<% provide(:title, "編集") %>
<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text">ユーザー情報更新</h1>

        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages' %>

            <div class="form-group">
              <%= f.label :name, class: 'text' %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :email, class: "text" %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password, class: "text" %>
              <%= f.text_field :password, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, class: "text" %>
              <%= f.text_field :password_confirmation, class: "form-control" %>
            </div>

            <%= f.submit "更新する", class: "btn-block btn btn-primary" %>
        <% end %>

        <div class="gravatar_edit">
          <%= gravatar_for @user %>
          <a href="http://gravatar.com/emails" target = "_blank">change</a>
        </div>
      </div>
    </div>
  </div>
</div>
